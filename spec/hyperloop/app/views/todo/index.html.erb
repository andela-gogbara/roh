<div id="exTab3">
<ul  class="nav nav-pills">
      <li class="active">
        <a  href="#1b" data-toggle="tab">Overview</a>
      </li>
      <li><a href="#2b" data-toggle="tab">Using nav-pills</a>
      </li>
    </ul>

      <div class="tab-content clearfix">
        <div class="tab-pane active" id="1b">
          <ul class="list-group">
            <% @pending_todos.each do |todo| %>
            <li class="list-group-item">
              <a href="/todo/<%= todo.id %>/show"><%= todo.title %></a>
              <div class="action-buttons">
                <a href="/todo/<%= todo.id%>/edit">
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
                <form action="/todo/<%= todo.id %>/destroy"  method="post">
                  <input type="hidden" class="form-control" name="_method" value ="delete" />
                  <button type="submit" name="button" class="btn btn-danger delete-button" id="delete_button">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                  </button>
                  </form>
              </div>
            </li>
            <% end %>
          </ul>
        </div>
        <div class="tab-pane" id="2b">
          <ul class="list-group">
            <% @completed_todos.each do |todo| %>
            <li class="list-group-item">
              <a href="/todo/<%= todo.id %>/show"><%= todo.title %></a>
              <div class="action-buttons">
                <a href="/todo/<%= todo.id%>/edit">
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
                <form action="/todo/<%= todo.id %>/destroy"  method="post">
                  <input type="hidden" class="form-control" name="_method" value ="delete" />
                  <button type="submit" name="button" class="btn btn-danger delete-button" id="delete_button">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                  </button>
                  </form>
              </div>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
  </div>
