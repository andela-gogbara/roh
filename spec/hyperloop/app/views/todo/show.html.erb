<div class="page-header">
  <h1><%= @todo.title %></h1>
</div>
<div class="main-content">
  <div class="maim">
    <%= @todo.body %>
  </div>
  <div class="status">
    <strong>Status: </strong> <%= @todo.status %>
  </div>
  <div class="status">
    <strong>Created At: </strong> <%= @todo.created_at %>
  </div>
  <div class="content-footer">
    <a href="/todo/<%= @todo.id %>/edit" class="btn btn-success action-btn">EDIT</a>
    <form action="/todo/<%= @todo.id %>/destroy"  method="post">
      <input type="hidden" class="form-control" name="_method" value ="delete" />
      <button type="submit" name="button" class="btn btn-danger action-btn">DELETE</button>
    </form>
  </div>
  <div class="items">
    <div class="list-group">
    <% @items.each do |item| %>
      <a href="#" class="list-group-item active">
        <h4 class="list-group-item-heading"><%= item.title %></h4>
        <p class="list-group-item-text"><%= item.body %></p>
      </a>
    <% end %>
  </div>
  </div>
</div>
